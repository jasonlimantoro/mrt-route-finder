{
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["@typescript-eslint", "prettier"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": [
			"error",
			{ "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }
		],
		"no-console": "error",
		"prettier/prettier": "error"
	}
}
